<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manage_content_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Add the Tool Bar (ActionBar) -->
        <include
            android:id="@+id/main_drawer_tool_bar"
            layout="@layout/main_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Set the Main content -->

        <include
            layout="@layout/content_manage_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_drawer_tool_bar"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>
