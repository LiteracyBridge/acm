<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.literacybridge</groupId>
  <artifactId>acm</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Audio Content Management</name>
  
  <description>
    This application allows management of Literacy Bridge and DAISY  audio content.
  </description>
  
  <url>http://code.google.com/p/talkingbook/</url>
  <modules>
    <module>../audioconverter</module>
    <module>../core</module>
    <module>../gui</module>
  </modules>
  
  <organization>
    <name>Literacy Bridge</name>
    <url>http://www.literacybridge.org</url>
  </organization>
  
  <ciManagement>
    <system>Hudson</system>
    <url>http://literacybridge.dyndns.org</url>
  </ciManagement>
  
  <issueManagement>
    <system>Google Code</system>
    <url>http://code.google.com/p/talkingbook/issues/list</url>
  </issueManagement>
  
  <licenses>
    <license>
      <name>Apache 2</name>
